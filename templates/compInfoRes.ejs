<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>MyStockTracker</title>
  <style>
      nav {
          background-color: #333;
          overflow: hidden;
      }
      nav ul {
          padding: 0;
          margin: 0;
          list-style: none;
          display: flex;
      }
      nav li {
          float: left;
      }

      nav a {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
      }
      nav a:hover {
          background-color: #ddd;
          color: black;
      }

    main {
        width: 80%; 
        margin: auto; 
    }
    ul {
        padding: 0;
        list-style: none;
    }
    
    li {
        margin-bottom: 20px; 
    }

    a {
        text-decoration: none; 
        color: black; 
    }
    a:hover {
        text-decoration: none; 
    }
  </style>
</head>
<body>
    <header>
        <nav>
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/companyInfo">Get Stock Info</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </nav>
    </header>
    <main>
      <br>
      <br>
      <h2>Financial Analytics(Powered By Yahoo AI Recommended Analytics) for <%-tickername%></h2>
      <ul>
        <% keyStatistics.forEach(stat => { %>
          <li><%= stat %></li>
        <% }); %>
      </ul>
      <hr>
      <h2>News for <%-tickername%> (Click the news title to see the article!)</h2>
      <ul>
        <% formattedNews.forEach(article => { %>
          <li>
            <a href="<%= article.link %>" target="_blank">
              <strong><%= article.title %></strong> - <%= article.publisher %> (Published on <%= article.publishTime %>)
            </a>
          </li>
        <% }); %>
      </ul>
    </main>
</body>



</html>
