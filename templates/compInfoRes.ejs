<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>MyStockTracker</title>
  <style>
    html {
      background-color: #092635;
    }

    header {
      background-color: #9EC8B9;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      display: flex;
      align-items: center;
      opacity: 90%;
    }

    body {
      margin-top: 60px;
      padding: 15px;
    }

    header * {
      display: inline;
    }

    header li {
      margin: 25px;
    }

    header li a {
      color: #092635;
      text-decoration: none;
      font-size: 1.5rem;
      font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    nav a:hover {
      color: white;
      box-shadow: 0 0 5px #9EC8B9,
            0 0 25px #9EC8B9,
            0 0 50px #9EC8B9,
            0 0 100px #9EC8B9;
      transition-delay: 0.1s;
      background-size: 4rem;
      transition: all .4s ease;
      -webkit-transition: all .4s ease;
    }

    #yahoo:visited {
			color: #9EC8B9;
		}

    #yahoo {
      font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

	#yahoo:hover {
		color: #5C8374;
	}

  p {
		position: fixed;
		bottom: 0;
		right: 0;
		color: #9EC8B9;
	} 
  
  main {
    color: #092635;
    font-family: "JetBrains Mono",monospace;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .box {
    border: 2px double ;
    border-color: black;
    background-color: #ccc;
    padding: 2rem;
    animation: fadeIn 5s;
  }

  @keyframes fadeIn {
    0% { opacity: 0; }
    50% { opacity: 1; }
  }

    ul {
        padding: 0;
        list-style: none;
    }
    
    li {
        margin-bottom: 20px; 
    }

    a {
        text-decoration: none; 
        color: black; 
        font-family: "JetBrains Mono",monospace;
    }

    a:hover {
        text-decoration: none; 
    }

    h2 {
			overflow: hidden;
			border-right: .15em solid #9EC8B9;
			white-space: nowrap;
			letter-spacing: .05em;
			animation:
				typing 1.5s steps(40) forwards,
				blink-caret .75s infinite
			;
			color: #9EC8B9;
			font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
			font-size: 2rem;
			margin-top: 3rem;
		}

		/* typing effect */
		@keyframes typing {
			from {width: 0%}
			to {width: 37%}
		}

		/* typewriter cursor effect */
		@keyframes blink-caret {
			from, to {border-color: transparent}
			50% {border-color: #9EC8B9}
		}
  </style>
</head>
<body>
    <header>
        <nav>
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/companyInfo">Get Stock Info</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </nav>
    </header>

    <main>
      <h2>AI Financial Analytics for <%-tickername%></h2><br>
      <div class="box">
        <ul>
          <% keyStatistics.forEach(stat => { %>
            <li><%= stat %></li>
          <% }); %>
        </ul>
      </div>
      
      <br>

      <h2>Recent News Articles for <%-tickername%></h2><br>
      <div class="box">
        <ul>
          <% formattedNews.forEach(article => { %>
            <li>
              <a href="<%= article.link %>" target="_blank">
                <strong><%= article.title %></strong> - <%= article.publisher %> (Published on <%= article.publishTime %>)
              </a>
            </li>
          <% }); %>
        </ul>
      </div>
    </main><br><br><br>

    <p>&copy; 2023 MyStockTracker&nbsp;&nbsp;â€¢&nbsp;&nbsp;Powered by <a id="yahoo" href="https://finance.yahoo.com/">Yahoo</a>&nbsp;&nbsp;&nbsp;&nbsp;</p>
</body>



</html>
