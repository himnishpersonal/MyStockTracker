<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>MyStockTracker</title>
  <script src="app.js"></script>
  <style>
    html {
      background-color: #092635;
    }

    header {
      background-color: #9EC8B9;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      display: flex;
      align-items: center;
      opacity: 90%;
    }

    body {
      margin-top: 60px;
      padding: 30px;
    }

    header * {
      display: inline;
    }

    header li {
      margin: 25px;
    }

    header li a {
      color: #092635;
      text-decoration: none;
      font-size: 1.5rem;
      font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    nav a:hover {
      box-shadow: 0 0 5px #9EC8B9,
            0 0 25px #9EC8B9,
            0 0 50px #9EC8B9,
            0 0 100px #9EC8B9;
      transition-delay: 0.1s;
      color: white;
      background-size: 4rem;
      transition: all .4s ease;
      -webkit-transition: all .4s ease;
    }

    .stock-tile {
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #d5eddc;
      font-family: "JetBrains Mono",monospace;
      padding: 10px;
      margin: 10px;
      text-align: center;
      width: 200px;
      display: inline-block;
      opacity: 90%;
    }

    .stock-tile:hover {
      box-shadow: 0 0 5px #9EC8B9,
            0 0 25px #9EC8B9,
            0 0 50px #9EC8B9;
      transition-delay: 0.1s;
      background-size: 4rem;
      transition: all .4s ease;
      -webkit-transition: all .4s ease;
      color: #092635;
    }

    .positive-change {
      background-color: #d4edda;
      color: #155724;
    }

    .negative-change {
      background-color: #f8d7da;
      color: #721c24;
    }

    .button {
  			align-items: center;
  			background-image: radial-gradient(100% 100% at 100% 0, #5C8374 0, #9EC8B9 100%);
  			border: 0;
  			border-radius: 6px;
  			box-shadow: rgba(45, 35, 66, .4) 0 2px 4px,rgba(45, 35, 66, .3) 0 7px 13px -3px,rgba(58, 65, 111, .5) 0 -3px 0 inset;
  			box-sizing: border-box;
  			color: #092635;
  			cursor: pointer;
  			display: inline-flex;
  			font-family: "JetBrains Mono",monospace;
  			height: 48px;
  			justify-content: center;
			  margin: 9 auto;
  			overflow: hidden;
  			padding-left: 16px;
  			padding-right: 16px;
  			position: relative;
  			text-align: center;
  			transition: box-shadow .15s,transform .15s;
  			white-space: nowrap;
  			will-change: box-shadow,transform;
  			font-size: 18px;
		}

		.button:focus {
  			box-shadow: #1B4242 0 0 0 1.5px inset, rgba(45, 35, 66, .4) 0 2px 4px, rgba(45, 35, 66, .3) 0 7px 13px -3px, #1B4242 0 -3px 0 inset;
		}

		.button:hover {
  			box-shadow: rgba(45, 35, 66, .4) 0 4px 8px, rgba(45, 35, 66, .3) 0 7px 13px -3px, #1B4242 0 -3px 0 inset;
  			transform: translateY(-2px);
        color: aliceblue;
		}

		.button:active {
  			box-shadow: #1B4242 0 3px 7px inset;
  			transform: translateY(2px);
		}

    #bottom {
			position: fixed;
			bottom: 0;
			right: 0;
			color: #9EC8B9;
		}

		#yahoo:visited {
			color: #9EC8B9;
		}

		#yahoo:hover {
			color: #5C8374;
		}
  </style>
</head>

<body>
    <header>
        <nav>
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/companyInfo">Get Stock Info</a></li>
            <li><a href="/">Logout</a></li>
          </ul>
        </nav>
    </header>
    <main>
      <form id="stockForm" action="/addToDashboard" method="post">
        <% stockChanges.forEach(stock => { %>
            <div class="stock-tile <%= stock.changePercent.includes('-') ? 'negative-change' : 'positive-change' %>">
                <input type="checkbox" name="selectedStocks" value="<%= stock.company %>">
                <!-- <input type ="text" name="sharesOwned"> -->
                <h3><%= stock.company %></h3>
                <p><%= stock.changePercent %></p>
            </div>
        <% }); %>
        <button class="button" type="button" onclick="addToDashboard()">Add to Dashboard</button>
      </form>

      <p id="bottom">&copy; 2023 MyStockTracker&nbsp;&nbsp;â€¢&nbsp;&nbsp;Powered by <a id="yahoo" href="https://finance.yahoo.com/">Yahoo</a>&nbsp;&nbsp;&nbsp;&nbsp;</p>
  </main>

  <script>
    function addToDashboard() {
      const form = document.getElementById('stockForm');
      form.submit();
    }
  </script>
</body>
</html>