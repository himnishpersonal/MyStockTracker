<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>MyStockTracker</title>
    <script src="app.js"></script>
    <style>
      nav {
          background-color: #333;
          overflow: hidden;
      }
      nav ul {
          padding: 0;
          margin: 0;
          list-style: none;
          display: flex;
      }
      nav li {
          float: left;
      }

      nav a {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
      }
      nav a:hover {
          background-color: #ddd;
          color: black;
      }

      .stock-tile {
        border: 1px solid #ccc;
        padding: 10px;
        margin: 10px;
        text-align: center;
        width: 200px;
        display: inline-block;
    }
    .positive-change {
        color: green;
    }
    .negative-change {
        color: red;
    }
  </style>
</head>
<body>
    <header>
        <nav>
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/companyInfo">Get Stock Info</a></li>
            <li><a href="/">Logout</a></li>
          </ul>
        </nav>
    </header>
    <main>
      <form id="stockForm" action="/addToDashboard" method="post">
        <% stockChanges.forEach(stock => { %>
            <div class="stock-tile <%= stock.changePercent.includes('-') ? 'negative-change' : 'positive-change' %>">
                <input type="checkbox" name="selectedStocks" value="<%= stock.company %>">
                <h3><%= stock.company %></h3>
                <p><%= stock.changePercent %></p>
            </div>
        <% }); %>
        <button type="button" onclick="addToDashboard()">Add to Dashboard</button>
      </form>
  </main>
  <script>
    function addToDashboard() {
      const form = document.getElementById('stockForm');
      form.submit();
    }
  </script>
</body>


</html>
